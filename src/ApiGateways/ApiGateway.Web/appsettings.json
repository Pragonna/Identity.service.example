{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TokenOptions": {
    "SecretKey": "super-secret-key-that-is-at-least-32-chars",
    "Issuer": "https://localhost:7022",
    "Audience": "your-audience@example.com",
    "AccessTokenExpiration": 15, // in minutes
    "RefreshTokenTTL": 1 // in days
  },
  "AllowedHosts": "*"
}
